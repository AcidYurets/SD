{{/* The line below tells Intellij/GoLand to enable the autocompletion based on the *gen.Graph type. */}}
{{/* gotype: entgo.io/ent/entc/gen.Graph */}}

{{ define "dto_connector" }}

{{/* Add the base header for the generated file */}}
{{ $pkg := base $.Config.Package }}
{{ template "header" $ }}

{{/* Loop over all nodes */}}
{{ range $n := $.Nodes }}
	{{ $receiver := $n.Receiver }}
	func ({{ $receiver }} *{{ $n.Name }}) ToDTO() *dto.{{ $n.Name }} {
		if {{ $receiver }} == nil {
			return nil
		}
		return &dto.{{ $n.Name }}{
			{{- $idType := $n.ID.Type.String}}
			{{if eq $idType "string"}}
				Uuid: {{ $receiver }}.{{ $n.ID.StructField }},
			{{else}}
				Id: {{ $receiver }}.{{ $n.ID.StructField }},
			{{end}}
			{{- range $f := $n.Fields }}
				{{- $fieldName := $f.StructField }}
				{{ $fieldName }}: {{ $receiver }}.{{ $fieldName }},
			{{- end }}
		}
	}
{{ end }}

{{ end }}
